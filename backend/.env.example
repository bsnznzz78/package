# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:8000

# Database Configuration
DATABASE_PATH=./database/rbc_counselling.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1d
JWT_REMEMBER_ME_EXPIRE=30d
JWT_COOKIE_NAME=rbcc_auth

# Phone Encryption (must be 32 bytes key base64 encoded)
PHONE_ENCRYPTION_KEY=JmTp8Qx4YyNlPZk1cGdRM3V5d1pYNnE0c3V6bUNPRVRhSmQxMnpLZw==

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="RBC Counselling" <noreply@rbccounselling.com>
ADMIN_NOTIFICATION_EMAIL=admin@rbccounselling.com

# SMS Configuration (Twilio - Optional)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
ADMIN_NOTIFICATION_PHONE=+919876543210

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX_REQUESTS=10
PHONE_OTP_EXPIRY_MINUTES=10
PASSWORD_RESET_EXPIRY_MINUTES=30

# CSRF
CSRF_COOKIE_NAME=rbcc_csrf

# Session / Cookie Configuration
COOKIE_SECRET=your-cookie-secret-change-this
COOKIE_SECURE=false
SAME_SITE=lax
